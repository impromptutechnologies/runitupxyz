<div id="basketball">
  <h1 style="margin-top:100px">Sus Basketball Games</h1>
  <p>If the time is 20:00 most likely the API guys fucked up.</p>
  

  {{#if basketball}}
  <h3>Add Odds</h3>
  <form action="/auth/addBB" method="POST">
    <input placeholder="outcomeID" name="outcomeID" />
    <input placeholder="Code" name="Code" />
    <input placeholder="odds" name="odds" type="number" step="0.01"/>
    <input placeholder="Code2" name="Code2" />
    <input placeholder="odds2" name="odds2" type="number" step="0.01"/>
    <button type="submit">Enter</button>
  </form>
  <br>
  <h3>Change Times</h3>
    <form action="/auth/timestart" method="POST">
      <input placeholder="outcomeID" name="outcomeID" />
      <input placeholder="timestart" name="timeStart" />
      <input placeholder="timeend" name="timeEnd" />
      <button type="submit">Enter</button>
    </form>

    {{#each basketball}}
      <div
        style="display: flex;height: fit-content;margin-top: 3px;padding: 0.2em;"
      >
        <div style="width:85%;display: flex;">
          <div style="padding: 0.6em;">
            <h3>{{this.outcomeID}}</h3>
          </div>
          <div style="padding: 0.6em;">
            <h3>{{this.team1}}</h3>
          </div>
          <div style="padding: 0.6em;">
            <h3>{{this.team2}}</h3>
          </div>
          <div style="padding: 0.6em;">
            <h3 class="date">{{this.timeStart}}</h3>
          </div>
        </div>
      </div>
      <hr />
    {{/each}}
  {{else}}
    <div style="width:85%">
      <div style="padding: 0.6em;">
        <h2>No Basketball Matches</h2>
      </div>
    </div>
  {{/if}}

</div>

<div id="changecrypto">
  <h1 style="margin-top:100px">Change Crypto and Bitcoin</h1>

  {{#if stocks}}
    <form action="/auth/changestock" method="POST">
      <input placeholder="Original" name="tickerorg" />
      <input placeholder="New" name="tickernew" />
      <input placeholder="Company" name="company" />
      <button type="submit">Enter</button>
    </form>

    {{#each stocks}}
      <div
        style="display: flex;height: fit-content;margin-top: 3px;padding: 0.2em;"
      >
        <div style="width:85%;display: flex;">
          <div style="padding: 0.6em;">
            <h3>{{this.ticker}}</h3>
          </div>
          <div style="padding: 0.6em;">
            <h3>{{this.company}}</h3>
          </div>
        </div>
      </div>
      <hr />
    {{/each}}
  {{else}}
    <div style="width:85%">
      <div style="padding: 0.6em;">
        <h2>No Stocks</h2>
      </div>
    </div>
  {{/if}}

  {{#if cryptos}}

    <form action="/auth/changecrypto" method="POST" style="margin-top:50px">
      <input placeholder="Original" name="symbolorg" />
      <input placeholder="New" name="symbolnew" />
      <input placeholder="Crypto" name="crypto" />
      <button type="submit">Enter</button>
    </form>

    {{#each cryptos}}
      <div
        style="display: flex;height: fit-content;margin-top: 3px;padding: 0.2em;"
      >
        <div style="width:85%;display: flex;">
          <div style="padding: 0.6em;">
            <h3>{{this.symbol}}</h3>
          </div>
          <div style="padding: 0.6em;">
            <h3>{{this.Crypto}}</h3>
          </div>
        </div>
      </div>
      <hr />
    {{/each}}
  {{else}}
    <div style="width:85%">
      <div style="padding: 0.6em;">
        <h2>No Cryptos</h2>
      </div>
    </div>
  {{/if}}
</div>



